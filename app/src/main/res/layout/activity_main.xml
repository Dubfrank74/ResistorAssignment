<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txtResistance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:backgroundTint="#80FFFFFF"
    android:backgroundTintMode="src_atop"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTolerence"
        android:layout_width="242dp"
        android:layout_height="39dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="12dp"
        android:text="@string/tolerence"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvResistance" />

    <ImageView
        android:id="@+id/imgResistor"
        android:layout_width="336dp"
        android:layout_height="103dp"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.626"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042"
        app:srcCompat="@drawable/resistor" />

    <Button
        android:id="@+id/btnBandTolerence"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="18dp"
        android:layout_height="76dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgResistor"
        app:layout_constraintEnd_toEndOf="@+id/imgResistor"
        app:layout_constraintHorizontal_bias="0.164"
        app:layout_constraintStart_toEndOf="@+id/btnBand3"
        app:layout_constraintTop_toTopOf="@+id/imgResistor"
        app:layout_constraintVertical_bias="0.407" />

    <ImageView
        android:id="@+id/imgOhm"
        android:layout_width="75dp"
        android:layout_height="39dp"
        android:contentDescription="@string/omega"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tvResistance"
        app:layout_constraintTop_toBottomOf="@+id/imgResistor"
        app:layout_constraintVertical_bias="0.021"
        app:srcCompat="@drawable/omega" />

    <Button
        android:id="@+id/btnBand3"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="18dp"
        android:layout_height="76dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgResistor"
        app:layout_constraintEnd_toEndOf="@+id/imgResistor"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toEndOf="@+id/btnBand2"
        app:layout_constraintTop_toTopOf="@+id/imgResistor"
        app:layout_constraintVertical_bias="0.407" />

    <Button
        android:id="@+id/btnBand1"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="18dp"
        android:layout_height="76dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgResistor"
        app:layout_constraintEnd_toEndOf="@+id/imgResistor"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintStart_toStartOf="@+id/imgResistor"
        app:layout_constraintTop_toTopOf="@+id/imgResistor"
        app:layout_constraintVertical_bias="0.407" />

    <Button
        android:id="@+id/btnBand2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="18dp"
        android:layout_height="76dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgResistor"
        app:layout_constraintEnd_toEndOf="@+id/imgResistor"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toEndOf="@+id/btnBand1"
        app:layout_constraintTop_toTopOf="@+id/imgResistor"
        app:layout_constraintVertical_bias="0.407" />

    <TextView
        android:id="@+id/tvResistance"
        android:layout_width="242dp"
        android:layout_height="39dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="12dp"
        android:text="@string/resistance"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgResistor" />

    <Spinner
        android:id="@+id/spin1Band1"
        android:layout_width="377dp"
        android:layout_height="36dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTolerence"
        app:layout_constraintVertical_bias="0.084" />

    <Spinner
        android:id="@+id/spin2Band2"
        android:layout_width="377dp"
        android:layout_height="36dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spin1Band1"
        app:layout_constraintVertical_bias="0.056" />

    <Spinner
        android:id="@+id/spin3Band3"
        android:layout_width="377dp"
        android:layout_height="36dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spin2Band2"
        app:layout_constraintVertical_bias="0.055" />

    <Spinner
        android:id="@+id/spin3Band4"
        android:layout_width="377dp"
        android:layout_height="36dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spin3Band3"
        app:layout_constraintVertical_bias="0.062" />

</androidx.constraintlayout.widget.ConstraintLayout>